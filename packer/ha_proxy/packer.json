{
  "variables": {
    "project_id": "{{ env `PROJECT_ID` }}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "database_load.json",
      "machine_type": "n1-standard-1",
      "project_id": "{{ user `project_id` }}",
      "source_image": "ubuntu-1604-xenial-v20190514",
      "region": "europe-west1",
      "zone": "europe-west1-b",
      "ssh_username": "packer",
      "disk_size": 10,
      "image_name": "haproxy-image-lb",
      "image_family": "packer-haproxy"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/haproxy.cfg",
      "destination": "/home/packer/haproxy.cfg"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/haproxy.sh"
      ]
    }
  ]
}