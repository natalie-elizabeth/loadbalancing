{
  "variables": {
  "project_id": "{{ env `PROJECT_ID` }}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "database_load.json",
      "machine_type": "n1-standard-1",
      "project_id": "{{ user `project_id` }}",
      "source_image": "ubuntu-1604-xenial-v20190430",
      "region": "europe-west1",
      "zone": "europe-west1-b",
      "ssh_username": "packer",
      "disk_size": 10,
      "image_name": "master-image-lb",
      "image_family": "packer-master"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/haproxySetup.sh",
      "destination": "/home/packer/haproxySetup.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/master_setup.sh"
        ]
      }
    ]
}