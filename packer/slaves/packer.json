{
  "variables": {
    "project_id": "{{ env `PROJECT_ID` }}",
    "image_name": "{{env `IMAGE_NAME`}}"

  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "database_load.json",
      "machine_type": "n1-standard-1",
      "project_id": "{{ user `project_id` }}",
      "source_image": "ubuntu-1604-xenial-v20190430",
      "region": "europe-west1",
      "zone": "europe-west1-b",
      "ssh_username": "packer",
      "disk_size": 10,
      "image_name": "slave-image-lb",
      "image_family": "packer-slave"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/slaveReplication.sh",
      "destination": "/home/packer/slaveReplication.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/slave_setup.sh"
      ]
    }
  ]
}